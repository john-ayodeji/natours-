extends base

block content
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Log into your account
            form.form.form--login
                .form__group
                    label.form__label(for='email') Email address
                    input#email.form__input(type='email', placeholder='you@example.com', required)
                .form__group
                    label.form__label(for='password') Password
                    input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
                .form__group
                    p(style='text-align: right; color: white; font-size: 1.8rem;')
                        | Are you a new user?
                        a(href='/signup', style='color: #55c57a; text-decoration: none; margin-left: 5px;') Sign up
                    p(style='text-align: right; color: white; font-size: 1.2rem;')
                        a(href='/forgotpassword', style='color: #55c57a; text-decoration: none;') Forgot password?
                .form__group
                    button.btn.btn--green Login
